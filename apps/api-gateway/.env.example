# API Gateway configuration
PORT=4000

# Auth service integration
AUTH_SERVICE_BASE_URL=http://localhost:3000/v1/auth
AUTH_SERVICE_TIMEOUT=5000

# Orders service integration
ORDERS_SERVICE_BASE_URL=http://localhost:3000/v1/orders
ORDERS_SERVICE_TIMEOUT=5000
ORDERS_SERVICE_ANONYMOUS_USER_ID=anonymous-web-user
ORDERS_SERVICE_ANONYMOUS_EMAIL=

# JWT verification (should match auth-service signing secret)
AUTH_JWT_SECRET=dev-secret

# Correlation header propagated downstream
CORRELATION_HEADER=x-correlation-id
